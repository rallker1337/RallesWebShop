@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.Routing
@using RasmusWebShop
@using RasmusWebShop.Controllers
@{
	string activeController = "";
	if (ViewContext.RouteData.Values["Controller"] != null)
	{
		activeController = ViewContext.RouteData.Values["Controller"].ToString();
	}


	
}

<!DOCTYPE html>
<html lang="en">

<head>

	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<meta name="description" content="">
	<meta name="author" content="">
	<link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono&display=swap" rel="stylesheet">
	<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">

	<title>R.S @ViewData["Title"]</title>

	<!-- Bootstrap core CSS -->
	<link href="~/vendor/bootstrap/css/bootstrap.css" rel="stylesheet">

	<!-- Custom styles for this template -->
	<link href="~/css/scrolling-nav.css" rel="stylesheet">

	<link rel="icon" type="image/png" href="~/img/favicon.svg" />

</head>

<body id="page-top" class="text-dark bg-secondary">
	<!-- Bakgrundsbilden -->
	<div class="parallax" data-parallax="scroll" data-z-index="-1" data-image-src="/img/bg2.jpg">
		<!-- Navigation -->
		<nav class="navbar navbar-expand-sm navbar-dark fixed-top" id="mainNav">
			<div class="container text-uppercase">
				<a class="navbar-brand d-none d-lg-block" asp-controller="Home" asp-action="Index"> <h4> <b> Rasmus Sträng </b> </h4> </a>
				@*		<a class="navbar-brand d-none d-sm-block d-md-none" asp-controller="Home" asp-action="Index"> <h4> <b> RS </b> </h4> </a>*@
				<a class="navbar-brand d-lg-none" asp-controller="Home" asp-action="Index"> <h4> <b> RS </b> </h4> </a>
				@*<h3 class="text-white mt-1">|</h3>*@
				<form asp-controller="Products" asp-action="Index" method="get">
					<div  class="search input-group mb-1 d-lg-none">
						<input type="text" name="q" class="form-control no-border rounded-pill bg-transparent font-italic text-white border-0 " autocomplete="off" placeholder="Search products...">
						<button type="submit" class="btn btn-secondary bg-transparent no-border rounded-circle ml-2"> <i class="fa fa-search"></i> </button>
					</div>
				</form>

				@*<h3 class="text-white mt-1">|</h3>*@
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse " id="navbarResponsive">
					<ul class="navbar-nav mr-auto">
						<li class="nav-item ml-auto">
							<a asp-controller="Home" asp-action="Index" class="nav-link@(activeController == "Home" ? " active" : "")">Home</a>
						</li>
						<li class="nav-item ml-auto">
							<a asp-controller="Products" asp-action="Index" class="nav-link@(activeController == "Products" ? " active" : "")">Products</a>
						</li>
						<li class="nav-item ml-auto">
							<a asp-controller="Categories" asp-action="Index" class="nav-link@(activeController == "Categories" ? " active" : "")">Categories</a>
						</li>
					</ul>
				</div>
			</div>
			<form class="d-none d-lg-block" asp-controller="Products" asp-action="Index" method="get">
				<div  class="search input-group mb-1 mr-auto">
					<input type="text" name="q" class="form-control no-border rounded-pill bg-transparent font-italic text-white border-0 " autocomplete="off" placeholder="Search products...">
					<button type="submit" class="btn btn-secondary bg-transparent no-border rounded-circle ml-2"> <i class="fa fa-search"></i> </button>
				</div>
			</form>
		</nav>
		


		<section class="container" id="about">
			<div class="float-right">
				<a class="btn bg-orange" asp-controller="Categories" asp-action="New">New category<i class="bi bi-plus-square add-icon float-none"></i></a>
				<a class="btn bg-orange" asp-controller="Products" asp-action="New">New product<i class="bi bi-plus-square add-icon"></i></a>
			</div>
			@RenderBody()
		</section>

		<!-- Footer -->
		<footer class="py-5">
			<div class="container">
				<ul class="list-group footer-list">
					<li class="card-link">
						<a asp-controller="Privacy" asp-action="Index" class="">Privacy</a>
					</li>
					<li class="">
						<p class="m-0">Copyright &copy; Rasmus Sträng 2021</p>
					</li>
				</ul>

			</div>
			<!-- /.container -->
		</footer>

		<!-- Bootstrap core JavaScript -->
		<script src="~/vendor/jquery/jquery.min.js"></script>
		<script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

		<!-- Plugin JavaScript -->
		<script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>

		<!-- Custom JavaScript for this theme -->
		<script src="~/js/scrolling-nav.js"></script>
		<!-- jquery-bibliotek -->
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>

		<!-- script för bakgrundsbilden -->
		<script src="~/js/parallax.js"></script>
		@RenderSection("Scripts", required: false)
	</div>
</body>

</html>
